{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "noEmitOnError": true,
    "types": ["node"]
  },
  "include": ["server.ts", "tools/**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "ts-node": { "esm": true }
}